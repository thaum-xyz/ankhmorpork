{
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "paulfantom"
  ],
  "reviewers": [
    "paulfantom"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": "metal/group_vars/k3s.yml",
      "matchStrings": [
        "k3s_version: (?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "k3s-io/k3s",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/[^/]+\\.ya?ml$"
      ],
      "matchStrings": [
        "jsonnet-version:\\s(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "google/jsonnet"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github\\/workflows\\/[^/]+\\.ya?ml$"
      ],
      "matchStrings": [
        "golang-version:\\s(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "golang"
    }
  ],
  "packageRules": [
    {
      "addLabels": [
        "dependensies/ci"
      ],
      "groupName": "github actions",
      "matchFileNames": [
        ".github/**"
      ],
      "automerge": true
    },
    {
      "addLabels": [
        "dependensies/hosting"
      ],
      "groupName": "hosting infrastructure",
      "matchFileNames": [
        "metal/**"
      ]
    },
    {
      "addLabels": [
        "dependensies/base"
      ],
      "groupName": "hosting infrastructure",
      "matchFileNames": [
        "base/**"
      ],
      "minimumReleaseAge": "10 days",
      "automerge": true
    },
    {
      "addLabels": [
        "dependensies/apps"
      ],
      "groupName": "applications",
      "matchFileNames": [
        "apps/**"
      ],
      "minimumReleaseAge": "20 days",
      "automerge": true
    },
    {
      "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})",
      "groupName": "applications",
      "minimumReleaseAge": "20 days",
      "automerge": true,
      "matchPackageNames": [
        "/^minio/"
      ]
    }
  ],
  "flux": {
    "fileMatch": [
      "(?:^|/)release\\.ya?ml$",
      "(?:^|/)repository\\.ya?ml$"
    ]
  }
}
